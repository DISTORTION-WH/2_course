<UserControl x:Class="app_7.controls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:app_7.controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding ElementName=Slider, Path=Value}" HorizontalAlignment="Center" Margin="0,0,0,5" />
            <Slider x:Name="Slider" Minimum="0" Maximum="255" SmallChange="1" LargeChange="10" Background="#AF070531"/>
        </StackPanel>
    </Grid>
</UserControl>
