<UserControl x:Class="app_7.controls.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:app_7.controls"
             xmlns:cam="clr-namespace:app_7"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="250">

    <UserControl.CommandBindings>
        <CommandBinding Command="cam:CustomCommand.GetColorCommand" 
                        Executed="GetColorCommand_Executed"
                        CanExecute="GetColorCommand_CanExecute"/>
    </UserControl.CommandBindings>
    
    <Button Content="Get color" Background="#FFE525CE" Foreground="White" FontSize="20" FontWeight="Bold" Click="Button_Click"/>
 
</UserControl>
