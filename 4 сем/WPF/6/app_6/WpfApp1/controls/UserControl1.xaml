<UserControl x:Class="WpfApp1.controls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.controls"
             mc:Ignorable="d" 
             d:DesignHeight="93" d:DesignWidth="231">
    <Grid>
        <Button Grid.Column="0" x:Name="toSearch" Grid.Row="5"  Background="#FF96FF2A" FontSize="20" FontWeight="Bold" BorderBrush="{x:Null}" Click="toSearch_Click">
            <StackPanel>
                <Label Content="{DynamicResource Search}" x:Name="LabelTop" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Label Content="tap to search" x:Name="LabelBottom" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Normal" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
