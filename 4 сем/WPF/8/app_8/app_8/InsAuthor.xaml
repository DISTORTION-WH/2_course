<Window x:Class="app_8.InsAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_8"
        mc:Ignorable="d"
        Title="InsAuthor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Label Content="enter NAME AUTHOR:" Grid.Row="0" />
        <Label Content="enter surname AUTHOR:" Grid.Row="2" />
        <Label Content="enter patronymic AUTHOR:" Grid.Row="4" />
        <Label Content="enter date of birth AUTHOR:" Grid.Row="6" />

        <TextBox x:Name="name_a" Grid.Row="1" />
        <TextBox x:Name="surname_a" Grid.Row="3" />
        <TextBox x:Name="patr_a" Grid.Row="5"/>
        <Calendar x:Name="date_a" Grid.Row="6"  Margin="0,25,0,0" />
        <Button x:Name="save_ins" Content="Insert!" Grid.Row="16"  Grid.Column="0" Grid.ColumnSpan="2" Click="save_ins_Click" />
    </Grid>
</Window>
