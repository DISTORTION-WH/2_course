<Window x:Class="app_8.InsPublisher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_8"
        mc:Ignorable="d"
        Title="InsPublisher" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="enter NAME publisher:" Grid.Row="0" />

        <TextBox x:Name="name_p" Grid.Row="1" />
        <Button x:Name="save_p" Content="Insert!" Grid.Row="3"  Grid.Column="0" Grid.ColumnSpan="2" Click="save_p_Click"/>
    </Grid>
</Window>
