<Page x:Class="app_8.DelBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_8"
      mc:Ignorable="d" 
      d:DesignHeight="406" d:DesignWidth="500"
      Title="DelBook">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="236*"/>
        </Grid.RowDefinitions>
        <Label Content="Delete row in Book" FontSize="20" FontWeight="Bold" Grid.Row="0"/>
        <Label Content="Write id of a row you want to delete" FontSize="14" Grid.Row="1"/>
        <TextBox x:Name="id_row" Grid.Row="2" BorderBrush="Aquamarine"/>
        <Button x:Name="del_row_book" Content="Delete!!" Grid.Row="3" Margin="5" Click="del_row_book_Click" />
    </Grid>
</Page>
